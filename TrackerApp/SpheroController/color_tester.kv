#:kivy 1.7.2

<ColorController>:
    BoxLayout:
        pos: root.pos
        size: root.size

        orientation: "vertical"

        Label:
            text: "Color controller"

        BoxLayout:
            Slider:
                orientation: "vertical"

            Slider:
                orientation: "vertical"

            Slider:
                orientation: "vertical"

        BoxLayout:
            size_hint: 1, 0.2

            Button:
                text: "Search for Spheros"
                on_press: root.on_button_click(1)

            Button:
                text: "FLASH"
                on_press: root.on_button_click(2)

